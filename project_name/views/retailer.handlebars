<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<div id="data">
				<table class="tablesorter display compact">
		            <thead>
						<br />
		                <tr>
		                    <th>Title</th>
		                    <th>Genre</th>
		                    <th>Price</th>
		                    <th>Stock</th>
		                    <th>Active</th>
		                    <th>Action</th>
		                </tr>
		            </thead>
	                {{#each products}}
	                    <tr id="{{this.id}}">
	                        <td>{{this.name}}</td>
	                        <td>{{this.department}}</td>
	                        <td>{{ formatPrice this.price}}</td>
	                        <td>{{this.stock}}</td>
	                        <td>
	                        	{{#if this.active}}
	                        		Yes
	                        	{{else}}
	                        	  	No
	                        	{{/if}}
	                    	</td>
	                        <td><a href="{{this.id}}/edit" class="btn btn-success btn-sm btn-edit"><span class="glyphicon glyphicon-pencil icon_edit" title="Edit record"></span></a>
	                        <a data-id="{{this.id}}" class="btn btn-danger btn-sm btn-delete"><span class="glyphicon glyphicon-remove icon_delete" title="Delete record"></span></a>
							<a href="/api/{{this.name}}" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-question-sign icon_info" title="Movie info"></span></a></td>
	                    </tr>
					{{/each}}
				</table>
			</div>
		</div>
	</div>
</div>
<!-- Modal for create/delete records -->
<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Confirm Delete</h4>
            </div>
        
            <div class="modal-body">
                <p>You are about to delete your product history, this procedure is irreversible.</p>
                <p>Do you want to proceed?</p>
            </div>
            
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="deleteProduct" data-dismiss="modal">Delete</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal for API request to OMdb -->
<div class="modal fade" id="api-request" tabindex="-1" role="dialog" aria-labelledby="movieLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="movieLabel">Movie information</h4>
            </div>
        
            <div class="modal-body">
                <p>API results go here</p>
            </div>
            
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="closeWindow" data-dismiss="modal">close</button>
            </div>
        </div>
    </div>
</div>